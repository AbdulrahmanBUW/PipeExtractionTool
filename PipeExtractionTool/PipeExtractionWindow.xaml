<Window x:Class="PipeExtractionTool.PipeExtractionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DEAXO Pipe Extraction Tool" 
        Height="600" 
        Width="800"
        MinHeight="400"
        MinWidth="600"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <Style TargetType="Button" x:Key="ModernButton">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004578"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="SecondaryButton" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#6C757D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6268"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="DEAXO Pipe Extraction Tool" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="#2C3E50"
                   Margin="0,0,0,10"/>

        <!-- Instructions -->
        <TextBlock Grid.Row="1" 
                   Text="Select the drawing sheets from which you want to extract pipe data:" 
                   FontSize="14" 
                   Foreground="#34495E"
                   Margin="0,0,0,15"
                   TextWrapping="Wrap"/>

        <!-- Sheet Selection -->
        <Border Grid.Row="2" 
                BorderBrush="#BDC3C7" 
                BorderThickness="1" 
                CornerRadius="4"
                Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Selection Controls -->
                <Border Grid.Row="0" 
                        Background="#ECF0F1" 
                        Padding="10"
                        BorderBrush="#BDC3C7"
                        BorderThickness="0,0,0,1">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Name="SelectAllButton" 
                                Content="Select All" 
                                Style="{StaticResource SecondaryButton}"
                                Margin="0,0,10,0"
                                Padding="10,5"
                                FontSize="12"
                                Click="SelectAllButton_Click"/>
                        <Button Name="DeselectAllButton" 
                                Content="Deselect All" 
                                Style="{StaticResource SecondaryButton}"
                                Padding="10,5"
                                FontSize="12"
                                Click="DeselectAllButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- Sheet List -->
                <ListView Grid.Row="1" 
                          Name="SheetsListView" 
                          SelectionMode="Multiple"
                          Background="Transparent"
                          BorderThickness="0"
                          Margin="5">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding DisplayName}" 
                                      IsChecked="{Binding IsSelected}"
                                      FontSize="13"
                                      Padding="8,5"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>

        <!-- Progress Bar -->
        <ProgressBar Grid.Row="3" 
                     Name="ProgressBar"
                     Height="20" 
                     Margin="0,15,0,0"
                     Visibility="Collapsed"/>

        <TextBlock Grid.Row="3" 
                   Name="ProgressText"
                   Text=""
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="12"
                   Foreground="#7F8C8D"
                   Margin="0,15,0,0"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Name="ExtractButton" 
                    Content="Extract to Excel" 
                    Style="{StaticResource ModernButton}"
                    Margin="0,0,15,0"
                    Click="ExtractButton_Click"/>
            <Button Name="CancelButton" 
                    Content="Cancel" 
                    Style="{StaticResource SecondaryButton}"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>