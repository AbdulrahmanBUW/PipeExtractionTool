<Window x:Class="PipeExtractionTool.PipeExtractionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pipe Extraction Tool" 
        Height="700" 
        Width="900"
        MinHeight="500"
        MinWidth="700"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <Style TargetType="Button" x:Key="ModernButton">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004578"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="SecondaryButton" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#6C757D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6268"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="TertiaryButton" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#28A745"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#218838"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Pipe Extraction Tool" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="#2C3E50"
                   Margin="0,0,0,10"/>

        <!-- Instructions -->
        <TextBlock Grid.Row="1" 
                   Text="Select the drawing sheets from which you want to extract pipe data:" 
                   FontSize="14" 
                   Foreground="#34495E"
                   Margin="0,0,0,15"
                   TextWrapping="Wrap"/>

        <!-- Discipline Selection -->
        <Border Grid.Row="2" 
                BorderBrush="#BDC3C7" 
                BorderThickness="1" 
                CornerRadius="4"
                Background="White"
                Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Discipline Selection Header -->
                <Border Grid.Row="0" 
                        Background="#ECF0F1" 
                        Padding="10"
                        BorderBrush="#BDC3C7"
                        BorderThickness="0,0,0,1">
                    <TextBlock Text="Filter by Discipline" 
                               FontWeight="Bold"
                               FontSize="14"/>
                </Border>

                <!-- Discipline Selection Controls -->
                <StackPanel Grid.Row="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Left"
                            Margin="10">
                    <ComboBox Name="DisciplinesComboBox" 
                              Width="200"
                              Margin="0,0,10,0"
                              SelectionChanged="DisciplinesComboBox_SelectionChanged"/>
                    <Button Name="SelectDisciplineButton" 
                            Content="Select Discipline" 
                            Style="{StaticResource TertiaryButton}"
                            Padding="10,5"
                            FontSize="12"
                            Click="SelectDisciplineButton_Click" Width="110"/>
                    <Button Name="ClearFilterButton" 
                            Content="Clear Filter" 
                            Style="{StaticResource SecondaryButton}"
                            Padding="10,5"
                            FontSize="12"
                            Margin="10,0,0,0"
                            Click="ClearFilterButton_Click" Width="79"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Sheet Selection -->
        <Border Grid.Row="3" 
                BorderBrush="#BDC3C7" 
                BorderThickness="1" 
                CornerRadius="4"
                Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Selection Controls -->
                <Border Grid.Row="0" 
                        Background="#ECF0F1" 
                        Padding="10"
                        BorderBrush="#BDC3C7"
                        BorderThickness="0,0,0,1">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Name="SelectAllButton" 
                                Content="Select All" 
                                Style="{StaticResource SecondaryButton}"
                                Margin="0,0,10,0"
                                Padding="10,5"
                                FontSize="12"
                                Click="SelectAllButton_Click" Width="57"/>
                        <Button Name="DeselectAllButton" 
                                Content="Deselect All" 
                                Style="{StaticResource SecondaryButton}"
                                Padding="10,5"
                                FontSize="12"
                                Click="DeselectAllButton_Click" Width="69"/>
                    </StackPanel>
                </Border>

                <!-- Sheet List -->
                <ListView Grid.Row="1" 
                          Name="SheetsListView" 
                          SelectionMode="Multiple"
                          Background="Transparent"
                          BorderThickness="0"
                          Margin="5">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox IsChecked="{Binding IsSelected}"
                                          VerticalAlignment="Center"
                                          Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding DisplayName}" 
                                           FontSize="13"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Discipline}" 
                                           FontSize="11"
                                           Foreground="Gray"
                                           Margin="10,0,0,0"
                                           VerticalAlignment="Center"
                                           FontStyle="Italic"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>

        <!-- Progress Bar -->
        <ProgressBar Grid.Row="4" 
                     Name="ProgressBar"
                     Height="20" 
                     Margin="0,15,0,0"
                     Visibility="Collapsed"/>

        <TextBlock Grid.Row="4" 
                   Name="ProgressText"
                   Text=""
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="12"
                   Foreground="#7F8C8D"
                   Margin="0,15,0,0"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Name="ExtractButton" 
                    Content="Extract to Excel" 
                    Style="{StaticResource ModernButton}"
                    Margin="0,0,15,0"
                    Click="ExtractButton_Click" Width="119" Height="23"/>
            <Button Name="CancelButton" 
                    Content="Cancel" 
                    Style="{StaticResource SecondaryButton}"
                    Click="CancelButton_Click" Width="53"/>
        </StackPanel>
    </Grid>
</Window>